extends layout

block content
  section#hero
    .row
      .small-12.column
        h1 FoonWiki
        h3.subheader An ambient wiki, like an atmosphere.
        br
    .row
      .small-12.large-4.columns.end
        a.button.radius(href="/pages/new")
          i.fa.fa-arrow-right.fa-fw
          |  Create New Page
  section#wikilinks
    .row.centered-text
      .small-12.large-4.columns
        section#seen
          h4 Pages You have Seen
          ul.undotted
      .small-12.large-4.columns
        section#updated
          h4 Recently Updated Pages
          ul.undotted
            each page in updatedPages
              li
                a(href=`/?id=${page.id}`) !{page.escape("name")}
            br
            li(style="text-align:right")
              a(href="/pages?sortedby=updated") view all&nbsp;
                i.fa.fa-chevron-circle-right
      .small-12.large-4.columns
        section#created
          h4 Newly Created Pages
          ul.undotted
            each page in newPages
              li
                a(href=`/?id=${page.id}`) !{page.escape("name")}
            br
            li(style="text-align:right")
              a(href="/pages?sortedby=created") view all&nbsp;
                i.fa.fa-chevron-circle-right
