extends layout

block content
  .row
    .small-12.columns
      section#pagetitle.pagetitle
        h3#pagename.border-dotted.cursor-text(placeholder="no title") #{page.get("name")}
        form#pagenameform.pagename.hide
          input#pagenameinput.border-dotted(type="text", placeholder="no title", value=page.get("name"))
  .row
    .small-12.column
      #content.editable.cursor-text(contenteditable=true) #{page.get("content")}
