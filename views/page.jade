extends layout

block content
  .row
    .small-12.columns
      section#pagetitle.pagetitle
        h3#pagename.border-dotted.cursor-text(placeholder="no title") #{page.name}
        form#pagenameform.pagename.hide
          input#pagenameinput.border-dotted(type="text", placeholder="no title", value=page.name)
  .row
    .small-12.column
      #content.editable.cursor-text(contenteditable=true) #{page.content}
      form#contents(action="/pages/#{page.id}", method="POST")
        input(type="submit", value="save")
